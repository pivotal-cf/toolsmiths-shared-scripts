  "nats": {
    "instances": 1
  },
  "etcd_tls_server": {
    "instances": 1
  },
  "nfs_server": {
    "instances": 1
  },
  "mysql_proxy": {
    "instances": 1
  },
  "diego_database": {
    "instances": 1
  },
  "mysql": {
    "instances": 1
  },
  "uaa": {
    "instances": 1
  },
  "cloud_controller": {
    "instances": 1
  },
  "cloud_controller_worker": {
    "instances": 1
  },
  "loggregator_trafficcontroller": {
    "instances": 1
  },
  "syslog_adapter": {
    "instances": 1
  },
  "doppler": {
    "instances": 1
  },
  "router": {
    "instances": 1,
    "elb_names": [
      "http:<%= http_lb %>",
      "tcp:<%= ws_router %>"
    ]
  },
  "diego_brain": {
    "instances": 1,
    "elb_names": [
      "tcp:<%= ssh_router %>"
    ]
  },
  "diego_cell": {
    "instances": 1
  }
